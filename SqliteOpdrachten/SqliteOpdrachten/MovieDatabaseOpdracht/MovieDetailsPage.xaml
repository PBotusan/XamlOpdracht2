<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteOpdrachten.MovieDatabaseOpdracht.MovieDetailsPage"
             Title="{Binding Title}" >

    
    <StackLayout>
        <ListView x:Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell x:Name="{Binding MainPage}" >

                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="{Binding Title}" FontSize="30" />
        <Label Text="{Binding ReleaseDate}" FontSize="15" TextColor="Gray" />
        <Label Text="{Binding OverView}" />
    </StackLayout>

</ContentPage>