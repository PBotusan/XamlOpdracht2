<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             BackgroundColor="Azure"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteOpdrachten.MovieDatabaseOpdracht.MoviePage">

    <StackLayout Padding="20">
        <Label Text="movies" HorizontalTextAlignment="Center" FontAttributes="Bold" FontFamily="Helvetica" FontSize="Medium"></Label>
        <SearchBar x:Name="searchList" Placeholder="Search by actor..." PlaceholderColor="Gray" TextChanged="SearchList_TextChanged" />
        <ActivityIndicator IsRunning="{Binding Source={x:Reference listView}, Path=IsLoading}"  HorizontalOptions="Center" Color="Black"></ActivityIndicator>

        <ListView x:Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="" Text="" Detail="" >

                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </StackLayout>
</ContentPage>