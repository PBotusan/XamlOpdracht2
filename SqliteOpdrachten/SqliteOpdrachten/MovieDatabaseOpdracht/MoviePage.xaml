<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             BackgroundColor="Azure"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteOpdrachten.MovieDatabaseOpdracht.MoviePage"
             Padding="10">

    <StackLayout>
        
        <Label Text="Movies" HorizontalTextAlignment="Center" FontAttributes="Bold" FontFamily="Helvetica" FontSize="Large"></Label>
        <SearchBar x:Name="searchList" Placeholder="Search by title..." PlaceholderColor="Gray" TextChanged="SearchList_TextChanged"/>
        <ActivityIndicator IsRunning="{Binding Source={x:Reference listView}, Path=IsSearching}"  HorizontalOptions="Center" Color="Black"></ActivityIndicator>

        <Frame Padding="20" HasShadow="False">
            <ListView x:Name="listView" ItemSelected="ListView_ItemSelected" IsVisible="false" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell 
						ImageSource="{Binding Poster}"
						Text="{Binding Title}" Detail="{Binding ReleaseDate}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
       
    </StackLayout>
</ContentPage>